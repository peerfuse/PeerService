FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Atlantis.Progress/Atlantis.Progress.csproj", "Atlantis.Progress/"]
RUN dotnet restore "Atlantis.Progress/Atlantis.Progress.csproj"
COPY . .
WORKDIR "/src/Atlantis.Progress"
RUN dotnet build "Atlantis.Progress.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Atlantis.Progress.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Atlantis.Progress.dll"]
